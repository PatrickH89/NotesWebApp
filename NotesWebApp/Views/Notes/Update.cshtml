@model NotesWebApp.Models.Note

<h1>Update a Note</h1>

<fieldset>

    <form asp-action="UpdateNote" asp-controller="Notes">
        <p>
            <input asp-for="Id" type="hidden" />
        </p>
        <p>
            <label asp-for="Subject">Subject:</label>
            <input asp-for="Subject" class="form-control" placeholder="Subject" />
        </p>
        <p>
            <label asp-for="Notice">Notice:</label>
            <textarea asp-for="Notice" class="form-control" rows="8" placeholder="Notice"></textarea>
        </p>
        <p>
            <button type="submit" class="btn btn-dark ml-1 rounded">Update</button>
        </p>
    </form>

</fieldset>
